extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Game Engine:
      input#name.form-control(type='text', placeholder='Unity, Unreal etc.' name='name' value=(undefined===engine ? '' : engine.name))
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg