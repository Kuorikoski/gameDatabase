extends layout

block content

  h1 Delete Engine: #{engine.name}
  
  if engine_games.length
  
    p #[strong Delete the following games before attempting to delete this engine.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Games
    
      dl
      each game in engine_games
        dt 
          a(href=game.url) #{game.title}
        dd #{game.summary}

  else
    p Do you really want to delete this Engine?
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=engine._id )

      button.btn.btn-primary(type='submit') Delete